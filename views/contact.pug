extends layout.pug

block script 
  script(src='../static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
  div.container
    h1 Contact Us
    form(action="/contact", method="post")
      label(for="name1") Name
      input(type="text", name="name",Class="formClass",id ="name1",placeholder="Enter Your Name")
      label(for="phone1") Phone Number
      input(type="tel", name="phone",Class="formClass",id ="phone1",placeholder="Enter Your Phone Number")
      label(for="email1") Email
      input(type="email", name="email",Class="formClass",id ="email1",placeholder="Enter Your Email id")
      label(for="gen1") Select Your Gender
      select(id="gen1",name="gender",Class="formClass1")
        option(value="Male") Male
        option(value="Female") Female
        option(value="Other")  Other
      label(for="txtarea") Suggestions
      textarea#txtarea(name="textarea", cols="30", rows="10",placeholder="Enter Your Suggestions here",Class="formClass1")
      div.buttons
        button(type="submit", class="btn") Submit 
        button(type="reset", class="btn") Clear